{
    "name": "pirumart/uganda-administrative-units",
    "description": "Laravel Package for administrative units of Uganda (Regions, Districts, Counties, Sub-Counties, Parish and Villages)",
    "keywords": [
        "pirumart",
        "uganda-administrative-units"
    ],
    "homepage": "https://github.com/pirumart/uganda-administrative-units",
    "license": "MIT",
    "authors": [
        {
            "name": "Rubangakene Pius",
            "email": "piruville@gmail.com",
            "homepage": "https://github.com/pirumart",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "illuminate/contracts": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^4.10"
    },
    "autoload": {
        "psr-4": {
            "Pirumart\\Skeleton\\": "src",
            "Pirumart\\Skeleton\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pirumart\\Skeleton\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pirumart\\Skeleton\\SkeletonServiceProvider"
            ],
            "aliases": {
                "Skeleton": "Pirumart\\Skeleton\\SkeletonFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
